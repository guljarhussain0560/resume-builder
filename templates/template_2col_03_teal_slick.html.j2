<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <style>
    @page { size: A4; margin: 1cm; }
    body {
      margin: 0;
      font-family: 'Segoe UI', sans-serif;
      font-size: 9pt;
      display: flex;
    }
    .left {
      background: #1abc9c;
      color: white;
      width: 30%;
      padding: 16px;
    }
    .right {
      background: #ffffff;
      width: 70%;
      padding: 16px;
    }
    h1 { font-size: 16pt; margin: 0 0 6px; }
    h2 { font-size: 10pt; border-bottom: 1px solid #ccc; color: #1abc9c; margin: 10px 0 6px; }
    h3 { font-size: 10pt; margin: 8px 0 4px; }
    ul { padding-left: 18px; margin: 4px 0 10px 0; }
    .skills-grid {
      display: grid; grid-template-columns: 1fr;
      list-style: none; padding: 0;
    }
    a { color: #BBDEFB; }
  </style>
</head>
<body>
  <div class="left">
    <h1>{{ Contact.Name }}</h1>
    <p>{{ Contact.Email }}<br>{{ Contact.Phone }}<br><a href="{{ Contact.LinkedIn }}" style="color:#ecf0f1">LinkedIn</a></p>

    {% if Skills %}
      <h3>Skills</h3>
      <ul class="skills-grid">{% for skill in Skills %}<li>{{ skill }}</li>{% endfor %}</ul>
    {% endif %}

    {% if Certification %}
      <h3>Certifications</h3>
      <ul>{% for cert in Certification %}<li>{{ cert }}</li>{% endfor %}</ul>
    {% endif %}
  </div>

  <div class="right">
    {% if Summary %}<h2>Summary</h2>{% for s in Summary %}<p>{{ s }}</p>{% endfor %}{% endif %}

    {% if Experience %}<h2>Experience</h2>
      {% for e in Experience %}
        <p><b>{{ e.Role }}</b> – {{ e.Company }} ({{ e.Duration }})</p>
        <ul>{% for d in e.Description %}<li>{{ d }}</li>{% endfor %}</ul>
      {% endfor %}
    {% endif %}

    {% if Projects %}<h2>Projects</h2>
      {% for p in Projects %}
        <p><strong>{{ p.Name }}</strong> ({{ p.Year }})<br>{{ p.Description }}</p>
      {% endfor %}
    {% endif %}

    {% if Education %}<h2>Education</h2>
      {% for e in Education %}
        <p>{{ e.Degree }} – {{ e.Institute }} ({{ e.Year }})</p>
      {% endfor %}
    {% endif %}
  </div>
</body>
</html>
