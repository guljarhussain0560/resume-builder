<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <style>
    @page { size: A4; margin: 1cm; }
    body { font-family: Tahoma, sans-serif; font-size: 9pt; color: #000; margin: 0; padding: 0; }
    h1 { font-size: 15pt; margin-bottom: 4px; }
    h2 { font-size: 10pt; border-bottom: 1px solid #aaa; margin: 10px 0 5px; }
    .section { margin-bottom: 6px; }
    .skills-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 2px 10px; list-style: none; padding: 0; }
  </style>
</head>
<body>
  <h1>{{ Contact.Name }}</h1>
  <p>{{ Contact.Email }} | {{ Contact.Phone }} | <a href="{{ Contact.LinkedIn }}">LinkedIn</a></p>

  {% if Summary %}<div class="section"><h2>Summary</h2>{% for s in Summary %}<p>{{ s }}</p>{% endfor %}</div>{% endif %}

  {% if Skills %}<div class="section"><h2>Skills</h2><ul class="skills-grid">{% for skill in Skills %}<li>{{ skill }}</li>{% endfor %}</ul></div>{% endif %}

  {% if Experience %}<div class="section"><h2>Experience</h2>{% for exp in Experience %}<p><strong>{{ exp.Role }}</strong> – {{ exp.Company }} ({{ exp.Duration }})</p><ul>{% for d in exp.Description %}<li>{{ d }}</li>{% endfor %}</ul>{% endfor %}</div>{% endif %}

  {% if Projects %}<div class="section"><h2>Projects</h2>{% for p in Projects %}<p><strong>{{ p.Name }}</strong> ({{ p.Year }})<br>{{ p.Description }}</p>{% endfor %}</div>{% endif %}

  {% if Education %}<div class="section"><h2>Education</h2>{% for e in Education %}<p>{{ e.Degree }} – {{ e.Institute }} ({{ e.Year }})</p>{% endfor %}</div>{% endif %}

  {% if Certification %}<div class="section"><h2>Certifications</h2><ul>{% for c in Certification %}<li>{{ c }}</li>{% endfor %}</ul></div>{% endif %}
</body>
</html>
