<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <style>
    @page { size: A4; margin: 1cm; }
    body { display: flex; font-family: 'Arial', sans-serif; font-size: 9pt; margin: 0; }
    .left {
      width: 30%;
      background: #27ae60;
      color: #fff;
      padding: 16px;
    }
    .right {
      width: 70%;
      background: #fff;
      padding: 16px;
      color: #2c3e50;
    }
    h1 { font-size: 16pt; margin-bottom: 5px; }
    h2 { font-size: 10pt; color: #27ae60; border-bottom: 1px solid #ccc; margin: 10px 0 4px; }
    h3 { color: white; margin: 10px 0 4px; }
    ul { padding-left: 18px; margin: 0 0 8px 0; }
    .skills-grid { list-style: none; padding: 0; }
    a { color: #b2ffea; }
  </style>
</head>
<body>
  <div class="left">
    <h1>{{ Contact.Name }}</h1>
    <p>{{ Contact.Email }}<br>{{ Contact.Phone }}<br><a href="{{ Contact.LinkedIn }}">LinkedIn</a></p>
    {% if Skills %}
    <h3>Skills</h3>
    <ul class="skills-grid">{% for skill in Skills %}<li>{{ skill }}</li>{% endfor %}</ul>
    {% endif %}
    {% if Certification %}
    <h3>Certifications</h3>
    <ul>{% for c in Certification %}<li>{{ c }}</li>{% endfor %}</ul>
    {% endif %}
  </div>
  <div class="right">
    {% if Summary %}<h2>Summary</h2>{% for s in Summary %}<p>{{ s }}</p>{% endfor %}{% endif %}
    {% if Experience %}<h2>Experience</h2>{% for e in Experience %}<p><strong>{{ e.Role }}</strong>, {{ e.Company }} ({{ e.Duration }})</p><ul>{% for d in e.Description %}<li>{{ d }}</li>{% endfor %}</ul>{% endfor %}{% endif %}
    {% if Projects %}<h2>Projects</h2>{% for p in Projects %}<p><strong>{{ p.Name }}</strong> ({{ p.Year }})<br>{{ p.Description }}</p>{% endfor %}{% endif %}
    {% if Education %}<h2>Education</h2>{% for e in Education %}<p>{{ e.Degree }} â€“ {{ e.Institute }} ({{ e.Year }})</p>{% endfor %}{% endif %}
  </div>
</body>
</html>
