<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <style>
    @page { size: A4; margin: 1cm; }
    body {
      font-family: 'Segoe UI', sans-serif;
      font-size: 9pt;
      margin: 0;
      padding: 0;
      background: #ffffff;
    }
    .header {
      background: #2C3E50;
      color: white;
      padding: 16px;
      text-align: center;
    }
    h1 { margin: 0; font-size: 16pt; }
    h2 { font-size: 10pt; color: #2C3E50; margin: 12px 0 4px; border-bottom: 1px solid #ccc; }
    .content { padding: 16px; }
    .skills-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      list-style: none;
      gap: 4px;
      padding: 0;
    }
  </style>
</head>
<body>
  <div class="header">
    <h1>{{ Contact.Name }}</h1>
    <p>{{ Contact.Email }} | {{ Contact.Phone }} | <a href="{{ Contact.LinkedIn }}" style="color:#BBDEFB">LinkedIn</a></p>
  </div>
  <div class="content">
    {% if Summary %}<h2>Summary</h2>{% for s in Summary %}<p>{{ s }}</p>{% endfor %}{% endif %}
    {% if Skills %}<h2>Skills</h2><ul class="skills-grid">{% for skill in Skills %}<li>{{ skill }}</li>{% endfor %}</ul>{% endif %}
    {% if Experience %}<h2>Experience</h2>{% for e in Experience %}<p><strong>{{ e.Role }}</strong> – {{ e.Company }} ({{ e.Duration }})</p><ul>{% for d in e.Description %}<li>{{ d }}</li>{% endfor %}</ul>{% endfor %}{% endif %}
    {% if Projects %}<h2>Projects</h2>{% for p in Projects %}<p><strong>{{ p.Name }}</strong> ({{ p.Year }})<br>{{ p.Description }}</p>{% endfor %}{% endif %}
    {% if Education %}<h2>Education</h2>{% for e in Education %}<p>{{ e.Degree }} – {{ e.Institute }} ({{ e.Year }})</p>{% endfor %}{% endif %}
    {% if Certification %}<h2>Certifications</h2><ul>{% for c in Certification %}<li>{{ c }}</li>{% endfor %}</ul>{% endif %}
  </div>
</body>
</html>
