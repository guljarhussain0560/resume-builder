<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <style>
    @page {
      size: A4;
      margin: 1cm;
    }
    body {
      font-family: Arial, sans-serif;
      font-size: 9pt;
      margin: 0;
      padding: 0;
      width: 100%;
      box-sizing: border-box;
    }
    .container {
      padding: 0;
    }
    h1 {
      font-size: 14pt;
      margin-bottom: 5px;
    }
    h2 {
      font-size: 10pt;
      border-bottom: 1px solid #ccc;
      margin-top: 12px;
      margin-bottom: 6px;
    }
    p {
      margin: 2px 0;
    }
    .section {
      margin-bottom: 6px;
    }
    ul {
      margin: 0 0 6px 0;
      padding: 0;
      list-style: none;
    }
    .skills-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 2px 10px;
    }
    .skills-grid li {
      margin: 2px 0;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>{{ Contact.Name }}</h1>
    <p>{{ Contact.Email }} | {{ Contact.Phone }} | <a href="{{ Contact.LinkedIn }}">LinkedIn</a></p>

    {% if Summary %}<div class="section">
      <h2>Summary</h2>
      {% for line in Summary %}<p>{{ line }}</p>{% endfor %}
    </div>{% endif %}

    {% if Skills %}<div class="section">
      <h2>Skills</h2>
      <ul class="skills-grid">
        {% for skill in Skills %}
        <li>{{ skill }}</li>
        {% endfor %}
      </ul>
    </div>{% endif %}

    {% if Experience %}<div class="section">
      <h2>Experience</h2>
      {% for exp in Experience %}
        <p><strong>{{ exp.Role }}</strong> â€“ {{ exp.Company }} ({{ exp.Duration }})</p>
        <ul>{% for d in exp.Description %}<li>{{ d }}</li>{% endfor %}</ul>
      {% endfor %}
    </div>{% endif %}

    {% if Projects %}<div class="section">
      <h2>Projects</h2>
      {% for p in Projects %}
        <p><strong>{{ p.Name }}</strong> ({{ p.Year }})<br>{{ p.Description }}</p>
      {% endfor %}
    </div>{% endif %}

    {% if Education %}<div class="section">
      <h2>Education</h2>
      {% for edu in Education %}
        <p>{{ edu.Degree }}, {{ edu.Institute }} ({{ edu.Year }})</p>
      {% endfor %}
    </div>{% endif %}

    {% if Certification %}<div class="section">
      <h2>Certifications</h2>
      <ul>{% for cert in Certification %}<li>{{ cert }}</li>{% endfor %}</ul>
    </div>{% endif %}
  </div>
</body>
</html>
