<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <style>
    @page {
      size: A4;
      margin: 1cm;
    }
    html, body {
      height: 100%;
      margin: 0;
      padding: 0;
    }
    body {
      font-family: 'Georgia', serif;
      font-size: 9pt;
      margin: 0;
      height: 100%;
      box-sizing: border-box;
    }
    .container {
      display: flex;
      height: 100%;
      min-height: 100vh;
      width: 100vw;
    }
    .left {
      width: 30%;
      background: #111;
      color: #f1c40f;
      padding: 12px;
      box-sizing: border-box;
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      overflow: hidden;
      overflow-wrap: break-word;
      word-wrap: break-word;
      word-break: break-word;
      white-space: normal;
      height: 100%;
    }
    .right {
      width: 70%;
      background: #1c1c1c;
      color: #f7f7f7;
      padding: 16px;
      box-sizing: border-box;
      display: flex;
      flex-direction: column;
      overflow-wrap: break-word;
      word-wrap: break-word;
      overflow: hidden;
      height: 100%;
    }
    h1 {
      font-size: 18pt;
      margin: 0 0 6px;
      color: #f39c12;
    }
    h2 {
      font-size: 10pt;
      color: #f1c40f;
      border-bottom: 1px solid #666;
      margin: 12px 0 6px;
    }
    h3 {
      font-size: 10pt;
      margin: 8px 0 4px;
      color: #f9e79f;
    }
    ul {
      padding-left: 16px;
      margin: 4px 0 10px 0;
    }
    .skills-grid {
      list-style: none;
      padding: 0;
    }
    a {
      color: #f4d03f;
    }
    p {
      margin: 0 0 8px;
      line-height: 1.4;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="left">
      <h1>{{ Contact.Name }}</h1>
      <p>{{ Contact.Email }}<br>{{ Contact.Phone }}<br>
      <a href="{{ Contact.LinkedIn }}">LinkedIn</a></p>

            {% if Skills %}
                <h3>Skills</h3>
                <ul>
                    {% for skill in Skills %}
                        <li>{{ skill }}</li>
                    {% endfor %}
                </ul>
            {% endif %}

      {% if Certification %}
      <h3>Certifications</h3>
      <ul>
        {% for cert in Certification %}
          <li>{{ cert }}</li>
        {% endfor %}
      </ul>
      {% endif %}
    </div>
    <div class="right">
      {% if Summary %}
      <h2>Summary</h2>
      {% for s in Summary %}
        <p>{{ s }}</p>
      {% endfor %}
      {% endif %}

      {% if Experience %}
      <h2>Experience</h2>
      {% for e in Experience %}
        <p><strong>{{ e.Role }}</strong> – {{ e.Company }} ({{ e.Duration }})</p>
        <ul>{% for d in e.Description %}<li>{{ d }}</li>{% endfor %}</ul>
      {% endfor %}
      {% endif %}

      {% if Projects %}
      <h2>Projects</h2>
      <ul>
        {% for p in Projects %}
        <li>
          <strong>{{ p.Name }}</strong> ({{ p.Year }})<br>
          {{ p.Description }}
        </li>
        {% endfor %}
      </ul>
      {% endif %}

      {% if Education %}
      <h2>Education</h2>
      <ul>
        {% for e in Education %}
        <li>{{ e.Degree }} – {{ e.Institute }} ({{ e.Year }})</li>
        {% endfor %}
      </ul>
      {% endif %}
    </div>
  </div>
</body>
</html>
