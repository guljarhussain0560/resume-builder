<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <style>
    @page { size: A4; margin: 1cm; }
    body {
      font-family: 'Helvetica Neue', sans-serif;
      font-size: 9pt;
      background: #f3f3f3;
      margin: 0;
    }
    .wrapper {
      background: #fff;
      padding: 15px;
      box-shadow: 0 0 3px #aaa;
    }
    h1 { font-size: 15pt; margin-bottom: 4px; }
    h2 { font-size: 10pt; border-bottom: 1px solid #333; margin: 10px 0 4px; }
    p, li { margin: 2px 0; }
    .skills-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      list-style: none;
      padding: 0;
      gap: 4px 10px;
    }
  </style>
</head>
<body>
  <div class="wrapper">
    <h1>{{ Contact.Name }}</h1>
    <p>{{ Contact.Email }} | {{ Contact.Phone }} | <a href="{{ Contact.LinkedIn }}">LinkedIn</a></p>

    {% if Summary %}<h2>Summary</h2>{% for s in Summary %}<p>{{ s }}</p>{% endfor %}{% endif %}
    {% if Skills %}<h2>Skills</h2><ul class="skills-grid">{% for skill in Skills %}<li>{{ skill }}</li>{% endfor %}</ul>{% endif %}
    {% if Experience %}<h2>Experience</h2>{% for exp in Experience %}<p><strong>{{ exp.Role }}</strong> – {{ exp.Company }} ({{ exp.Duration }})</p><ul>{% for d in exp.Description %}<li>{{ d }}</li>{% endfor %}</ul>{% endfor %}{% endif %}
    {% if Projects %}<h2>Projects</h2>{% for p in Projects %}<p><b>{{ p.Name }}</b> ({{ p.Year }})<br>{{ p.Description }}</p>{% endfor %}{% endif %}
    {% if Education %}<h2>Education</h2>{% for e in Education %}<p>{{ e.Degree }} – {{ e.Institute }} ({{ e.Year }})</p>{% endfor %}{% endif %}
    {% if Certification %}<h2>Certifications</h2><ul>{% for c in Certification %}<li>{{ c }}</li>{% endfor %}</ul>{% endif %}
  </div>
</body>
</html>
